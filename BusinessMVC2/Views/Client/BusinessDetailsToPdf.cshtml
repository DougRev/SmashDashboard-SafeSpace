@{
    ViewBag.Title = "BusinessDetailsToPdf";
    ViewBag.HideFooter = true; // Add this line to hide the footer
}


<body>
    <div class="certificate-container">
        <div class="certificate-header">
            <h1>Certificate of Emissions Savings</h1>
        </div>
        <div class="certificate-body">
            <div class="business-info">
                <strong>Business Name:</strong> @Model.BusinessName<br>
                <strong>State:</strong> @Model.State<br>
                <strong>Emissions Saved:</strong> @Model.AllEmissionsSavedWithSmashV2.ToString("N2") tons<br>
                <strong>Percent Saved with Smash:</strong> @Model.AllSavingsTotalV2%
            </div>
            <div class="savings-info">
                Congratulations! Your business has saved @Model.TotalCO2SavedV2.ToString("N2") tons of CO2 emissions by using our products and services. Keep up the great work!
            </div>
            <div class="savings-info">
                Congratulations! Your business has saved @Model.TotalCO2SavedV2.ToString("N2") tons of CO2 emissions by using our products and services. Keep up the great work!
            </div>
            <div class="signature">
                <img id="logo" src="https://smashdashstorage.blob.core.windows.net/smashdashblob/trinity.png" alt="Logo">
                <p>Signed by:</p>
                <h4>Smash My Trash</h4>
                <img id="badge" src="https://smashdashboard.com/Content/Images/SMT-Gold-Badge.png" alt="Badge">
            </div>
        </div>
    </div>
    <script type="text/javascript">
        window.onload = function () {
            var navBar = document.getElementById("navbar");
            var footer = document.getElementById("footer");

            if (navBar) {
                navBar.style.display = "none";
            }
            if (footer) {
                footer.style.display = "none";
            }
        };
    </script>
