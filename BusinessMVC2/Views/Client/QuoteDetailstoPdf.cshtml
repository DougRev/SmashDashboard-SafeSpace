@model BusinessMVC2.Models.QuoteDetailsViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quote Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            color: #333;
        }

        .header {
            text-align: center;
        }

        .logo {
            max-width: 100px;
        }

        .footer {
            text-align: center;
            font-size: 0.8em;
            margin-top: 50px;
        }

        h1, h2, h3 {
            color: #0055A5;
        }
        /* Replace with your brand color */
        .content {
            margin: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .call-to-action {
            text-align: center;
            margin-top: 40px;
        }
    </style>
</head>

<body>
    <div class="header">
        <img src="path_to_logo" alt="Company Logo" class="logo" />
        <h2>Quote Details</h2>
    </div>

    <div class="content">
        <h3>Client Information</h3>
        <p><strong>Name:</strong> @Model.ClientName</p>
        <p><strong>Email:</strong> @Model.ClientEmail</p>
        <!-- Add more client details as needed -->

        <h3>Quote Overview</h3>
        <table>
            <tr>
                <th>Description</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
            @foreach (var item in Model.QuoteItems)
            {
                <tr>
                    <td>@item.Description</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                </tr>
            }
        </table>
        <p><strong>Total Price:</strong> @Model.TotalPrice</p>
    </div>

    <div class="call-to-action">
        <p>For more information, please contact us at <a href="mailto:marketing@smashmytrash.com">marketing@smashmytrash.com</a></p>
    </div>

    <div class="footer">
        <p>© @DateTime.Now.Year Your Company Name | All rights reserved</p>
        <p>Visit our website: <a href="https://www.smashmytrash.com">www.SmashMyTrash.com</a></p>
    </div>
</body>
</html>